<form id="login-form" class="box has-background-warning-light" style="margin:10px">
    <div class="field">
        <label class="label">Username</label>
            <div class="control">
                <input id="username-login" class="input" type="text" placeholder="Jonny Dough">
            </div>
    </div>
        
    <div class="field">
        <label class="label">Password</label>
            <div class="control">
                <input id="password-login" class="input" type="password" placeholder="********">
            </div>
    </div>
        
    <button type="submit" id="login-button" class="button is-warning">Log in</button>
    <p class="" id="validate"></p>
</form>
        
<script src="./login.js"></script>